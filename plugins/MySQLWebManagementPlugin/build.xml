<?xml version="1.0"?>

<project name="mysqlwebmanagementplugin" default="build-app" basedir=".">

  <target name="prepare-build">
    <delete dir="classes" />
    <mkdir dir="classes" />
    <mkdir dir="classes/web" />
    <copy todir="lib" failonerror="false">
      <fileset dir="../../dist">
        <include name="cardservproxy.jar"/>
      </fileset>
      <fileset dir="../../lib">
        <include name="bowhttpd.jar"/>
        <include name="bowman.jar"/>
        <include name="bowxml.jar"/>
      </fileset>      
    </copy>
    <path id="classpath">
      <fileset dir="lib">
        <include name="**/*.jar"/>
      </fileset>
    </path>
    <delete dir="build" />
    <mkdir dir="build" />
    <mkdir dir="build/lib" />
    <copy todir="build/lib">
      <fileset dir="lib">
        <include name="*.jar" />
      </fileset>
    </copy>
    <copy todir="classes">
      <fileset dir="src">
        <include name="**/*.properties"/>
        <include name="**/*.xml"/>
      </fileset>
    </copy>
    <copy todir="classes/web">
      <fileset dir="web">
        <include name="**/*.*"/>        
      </fileset>
    </copy>    
    <property name="classpath" refid="classpath" />
  </target>

  <target name="build-app" depends="prepare-build">
    <javac failonerror="false" srcdir="src" includes="**/*.java"
      destdir="classes" classpath="${classpath}"
      debug="on">
    </javac>
    <jar jarfile="build/lib/mysqlwebmanagementplugin.jar">
      <fileset dir="classes">
        <include name="**/*" />
        <!-- exclude name="**/*.gz" / -->
      </fileset>
    </jar>
    <copy todir="dist" file="build/lib/mysqlwebmanagementplugin.jar" />
    <delete dir="build"/>
    <delete dir="classes"/>
  </target>

  <target name="tar-src" depends="prepare-build">
    <mkdir dir="build/src"/>
    <copy todir="build/src">
      <fileset dir="src">
        <include name="**/*" />
      </fileset>
    </copy>
    <copy todir="build/web">
      <fileset dir="web">
        <include name="**/*" />
      </fileset>
    </copy>
    <copy todir="build">
      <fileset dir=".">
        <include name="MySQLWebManagementPlugin.iml" />
        <include name="MySQLWebManagementPlugin.ipr" />
      </fileset>
    </copy>    
    <copy todir="build" file="build.xml"/>
    <tar tarfile="dist/mysqlwebmanagementplugin-src.tar" basedir="build"/>
    <gzip zipfile="dist/mysqlwebmanagementplugin-src.tar.gz" src="dist/mysqlwebmanagementplugin-src.tar"/>
    <delete file="dist/mysqlwebmanagementplugin-src.tar" />
    <delete dir="build"/>
  </target>

</project>
